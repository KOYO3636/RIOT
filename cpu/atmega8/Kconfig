config CPU_FAM_ATMEGA8
    bool
    select CPU_COMMON_ATMEGA

## CPU Models
config CPU_MODEL_ATMEGA8
    bool
    select CPU_FAM_ATMEGA8

## Common CPU symbols
config CPU_FAM
    default "atmega8" if CPU_FAM_ATMEGA8

config CPU_MODEL
    default "atmega8" if CPU_MODEL_ATMEGA8

config CPU
    default "atmega8" if CPU_FAM_ATMEGA8

source "$(RIOTCPU)/atmega_common/Kconfig"
